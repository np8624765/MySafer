<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- 功能标题样式. -->
    <style name="TitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#0072ff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 内容标题样式. -->
    <style name="ContentStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff4a4a4a</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- 下一步按钮样式. -->
    <style name="NextStyle">
        <item name="android:text">下一步</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <!-- 按钮样式. -->
    <style name="PrevStyle">
        <item name="android:text">上一步</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/btn_blue</item>
    </style>

</resources>
