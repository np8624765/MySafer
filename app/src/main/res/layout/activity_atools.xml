<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mysafer.activity.AToolsActivity">

    <TextView
        android:id="@+id/tv_setting_title"
        android:text="高级工具"
        style="@style/TitleStyle"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:text="号码归属地查询"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:clickable="true"
        android:focusable="true"
        android:onClick="numberAddressQuery"/>
        <TextView
            android:background="#ff848484"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:text="短信备份至SD卡"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:clickable="true"
            android:focusable="true"
            android:onClick="smsBackup"/>
        <TextView
            android:background="#ff848484"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:text="程序锁功能"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@android:drawable/ic_menu_crop"
            android:clickable="true"
            android:focusable="true"
            android:onClick="appLock"/>
        <TextView
            android:background="#ff848484"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>



</LinearLayout>
